@{
    ViewData["Title"] = "Home Page";
}

<!-- Welcome Section -->
<div class="text-center">
    <h1 class="display-4" style="color: #4CAF50;">Welcome</h1> <!-- Green color -->
</div>

<!-- Vegetables Section -->
<div class="text-center mt-5 animate__animated animate__fadeIn">
    <h2 style="color: #FF5722;">Find Your Favorite Vegetables</h2> <!-- Orange color -->
    <p style="color: #555;">Explore a wide variety of fresh vegetables at friendly prices, available from different online retailers.</p>
