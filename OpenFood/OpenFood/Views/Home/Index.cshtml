    <div class="mt-3">
        <a href="@Url.Action("Index", "Vegetable")" class="btn btn-success animate__animated animate__pulse">
            Explore Vegetables & Buy Online
        </a> <!-- Button for Vegetable Page -->
    </div>
</div>

@section Scripts {
